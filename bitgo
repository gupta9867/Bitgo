from selenium import webdriver
from selenium.webdriver.common.by import By

# Set up the WebDriver (make sure to specify the path to your WebDriver)
driver = webdriver.Chrome(executable_path='path/to/chromedriver')

try:
    # Visit the block page
    driver.get("https://blockstream.info/block/000000000000000000076c036ff5119e5a5a74df77abf64203473364509f7732")

    # Wait for the page to load and locate the heading
    heading = driver.find_element(By.CSS_SELECTOR, 'div.transaction-list-header h2')

    # Validate the heading text
    assert heading.text == "25 of 2875 Transactions", f"Expected '25 of 2875 Transactions', but got '{heading.text}'"

    print("Test Case 1 Passed: Heading is correct.")

finally:
    driver.quit()
